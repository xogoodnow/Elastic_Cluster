version: "3.8"
services:
  elasticsearch_exporter:
    container_name: elasticsearch_exporter-{{ ansible_play_hosts_all.index(inventory_hostname) +1 }}
    image: "{{ ELASTIC_EXPORTER_BASE_IMAGE }}:{{ ELASTICSEARCH_EXPORTER_VERSION }}"
    command:
      - '--es.uri=https://{{ MONITORING_USER }}:{{ MONITORING_PASSWORD }}@elastic-{{ ansible_play_hosts_all.index(inventory_hostname) +1 }}-public:9200'
      - '--collector.clustersettings'
      - '--es.indices'
      - '--es.indices_settings'
      - '--es.aliases'
      - '--es.shards'
      - '--es.snapshots'
      - '--es.data_stream'
      - '--es.indices_mappings'
      - '--es.slm'
      - '--es.timeout=30s'
      - '--es.clusterinfo.interval=1m'
      - '--es.ssl-skip-verify'
    restart: always
    network_mode: host

